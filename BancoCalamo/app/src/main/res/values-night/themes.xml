        <!-- Customize your light theme here. -->
        <item name="android:background">@color/color_fondo</item>
        <item name="colorPrimary">@color/color_texto_boton</item>
        <item name="colorSecondary">@color/color_texto_boton</item>

    </style>


    <style name="EstiloBotones">
        <item name="android:layout_width">0dp</item>
